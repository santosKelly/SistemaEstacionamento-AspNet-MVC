@model Estacionamento.Models.Veiculo

@{
    ViewData["Title"] = "Remover veículo";
}

@if (TempData["MensagemRemocao"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemRemocao"]
    </div>
}
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Deletar">
            <div class="form-group">
                <label asp-for="Modelo" class="control-label" style="color:orangered"></label>
                <input asp-for="Modelo" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label" style="color:orangered"></label>
                <input asp-for="Placa" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="PrecoInicial" class="control-label" style="color:orangered"></label>
                <input asp-for="PrecoInicial" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="PrecoHora" class="control-label" style="color:orangered"></label>
                <input asp-for="PrecoHora" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label" style="color:orangered"></label>
                <input asp-for="Cor" class="form-control" />
                <span asp-validation-for="Cor" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label" style="color:orangered"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Proprietario" class="control-label" style="color:orangered"></label>
                <input asp-for="Proprietario" class="form-control" />
                <span asp-validation-for="Proprietario" class="text-danger"></span>

            </div>

            <br>
            <div class="form-group">
                <input type="submit" value="Deletar" class="btn btn-link" @*onclick="return confirmarRemocao()"*@ />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>
<hr />
<br>

