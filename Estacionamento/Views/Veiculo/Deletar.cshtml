@model Estacionamento.Models.Veiculo

@{
    ViewData["Title"] = "Remover veículo";
}

@if (TempData["MensagemRemocao"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemRemocao"]
    </div>
}
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Deletar">
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="PrecoInicial" class="control-label"></label>
                <input asp-for="PrecoInicial" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="PrecoHora" class="control-label"></label>
                <input asp-for="PrecoHora" class="form-control" />

            </div>

           @* <input type="hidden" id="horasEstacionado" name="horasEstacionado" />*@

            <br>
            <div class="form-group">
                <input type="submit" value="Deletar" class="btn btn-danger" @*onclick="return confirmarRemocao()"*@ />

                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>
<hr />
<br>



